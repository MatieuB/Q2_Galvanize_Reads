{{#book}}


<h1>Editing {{title}} </h1>
<fieldset>
    <form class="col-md-3" action="/books/edit/{{id}}" method="POST">
        <div class="form-group">
          <label for="">Title</label>
          <input type="text" name="title"
          value="{{title}}" class="form-control">
        </div>
        <div class="form-group">
        <label>Authors</label>
        <select class="form-control" name="">
        {{#authors}}
        <option>{{this}}</option>
        {{/authors}}
        </select>
        </div>
        <div class="form-group">
        <label for="">Description</label>
        <textarea id="bio" name="description" class="form-control">{{description}}</textarea>
        </div>
        <div class="form-group">
        <label for="">Cover URL</label>
        <input type="text" name="cover_url" value="{{cover_url}}"class="form-control">
        </div>
        <a href="/books">
        <button type="button" class="btn btn-default">CANCEL</button>
        </a>
        <button type="submit" class="btn btn-default">SUBMIT</button>
    </fieldset>
    </form>

{{/book}}
